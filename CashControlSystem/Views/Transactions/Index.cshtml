@model IEnumerable<CashControlSystem.Models.TransactionViewModel>

@{
    ViewBag.Title = "Transaction List";
}

<h2>Transaction List</h2>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Customer Code</th>
                    <th>Customer Name</th>
                    <th>Transaction Type</th>
                    <th>Currency</th>
                    <th>Amount</th>
                    <th>Transaction Date Time</th>
                    <th>Bank PIC</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.No</td>
                        <td>@item.CustomerCode</td>
                        <td>@item.CustomerName</td>
                        <td>@item.TransactionType</td>
                        <td>@item.Currency</td>
                        <td>@item.Amount</td>
                        <td>@item.TransactionDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@item.BankPIC</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.No }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Details", "Details", new { id = item.No }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.No }, new { @class = "btn btn-danger btn-sm" })
                            <form action="@Url.Action("Deposit", "Transactions")" method="post" class="d-inline">
                                @Html.Hidden("TransactionID", item.No)
                                <button type="submit" class="btn btn-success btn-sm">Deposit</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Customer Code</th>
                    <th>Customer Name</th>
                    <th>Transaction Type</th>
                    <th>Currency</th>
                    <th>Amount</th>
                    <th>Transaction Date Time</th>
                    <th>Bank PIC</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="9" class="text-center">No data available</td>
                </tr>
            </tbody>
        </table>
    </div>
}
